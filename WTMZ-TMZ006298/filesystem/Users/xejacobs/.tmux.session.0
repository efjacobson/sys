new-window
set -g pane-border-status top
set -g mouse on

split-window -h -p 33
select-pane -t 0
split-window -h
split-window -v
select-pane -t 1

unbind C-b
set-option -g prefix C-d
bind-key C-d send-prefix

bind \\ split-window -h
bind - split-window -v
unbind '"'
unbind %

set-option -g default-command "reattach-to-user-namespace -l $SHELL"
