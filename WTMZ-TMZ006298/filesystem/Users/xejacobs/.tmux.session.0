new-window
set -g pane-border-status top
set -g mouse on

split-window -v -p 85
select-pane -t 0
send-keys -t 0 "glances" C-m

select-pane -t 1
split-window -h -p 33
select-pane -t 1
split-window -h
split-window -v
select-pane -t 2

unbind C-b
set-option -g prefix C-d
bind-key C-d send-prefix

bind \\ split-window -h
bind - split-window -v
unbind '"'
unbind %

set-option -g default-command "reattach-to-user-namespace -l $SHELL"
